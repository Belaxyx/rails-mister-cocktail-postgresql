<h3>Add a dose for this cocktails</h3>
<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient %>
  <%= f.submit "Create new dose", class: "btn btn-primary" %>
<% end %>

